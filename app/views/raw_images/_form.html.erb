    <%= form.submit class: 'btn btn-primary' %>

    <% if raw_image.persisted? %>
      <%= link_to "Cancel", raw_image, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", raw_images_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
